@page "/"

<PageTitle>SeatEats - Utah Jazz In-Seat Delivery</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-md-8">
            <h1 class="display-3 fw-bold">
                <span class="text-danger">🍔</span> SeatEats
            </h1>
            <p class="lead text-muted fs-4">
                McDonald's delivered right to your seat at Delta Center
            </p>
            <p class="fs-5">
                Never miss a play. Never get lost in the concourse.
            </p>
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card h-100 border-danger shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="display-1 mb-3">📱</div>
                    <h3 class="card-title">Fan</h3>
                    <p class="card-text text-muted">Order food from your seat</p>
                    <a href="/order" class="btn btn-danger btn-lg">Order Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-warning shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="display-1 mb-3">👨‍🍳</div>
                    <h3 class="card-title">Kitchen</h3>
                    <p class="card-text text-muted">Manage incoming orders</p>
                    <a href="/kitchen" class="btn btn-warning btn-lg">Kitchen View</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-success shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="display-1 mb-3">🏃</div>
                    <h3 class="card-title">Runner</h3>
                    <p class="card-text text-muted">Deliver orders to seats</p>
                    <a href="/runner" class="btn btn-success btn-lg">Runner View</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-8 text-center">
            <div class="card bg-light">
                <div class="card-body py-4">
                    <h4>How It Works</h4>
                    <div class="d-flex justify-content-around flex-wrap mt-3">
                        <div class="text-center px-3">
                            <div class="fs-1">1️⃣</div>
                            <small>Enter your seat</small>
                        </div>
                        <div class="text-center px-3">
                            <div class="fs-1">2️⃣</div>
                            <small>Pick your food</small>
                        </div>
                        <div class="text-center px-3">
                            <div class="fs-1">3️⃣</div>
                            <small>Kitchen prepares</small>
                        </div>
                        <div class="text-center px-3">
                            <div class="fs-1">4️⃣</div>
                            <small>Runner delivers</small>
                        </div>
                        <div class="text-center px-3">
                            <div class="fs-1">5️⃣</div>
                            <small>Enjoy! 🎉</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col text-center text-muted">
            <small>Built for Utah Jazz fans at Delta Center</small><br/>
            <small>Solving "Lost in the middle of everything" - Ryan Smith</small>
        </div>
    </div>
</div>
