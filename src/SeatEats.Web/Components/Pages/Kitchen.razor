@page "/kitchen"
@using Microsoft.AspNetCore.SignalR.Client
@using SeatEats.Application.DTOs
@using SeatEats.Application.Services
@using SeatEats.Domain.Enums
@inject OrderService OrderService
@inject NavigationManager Navigation
@rendermode InteractiveServer
@implements IAsyncDisposable

<PageTitle>Kitchen Dashboard - SeatEats</PageTitle>

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col">
            <h2>üë®‚Äçüç≥ Kitchen Dashboard</h2>
        </div>
        <div class="col-auto">
            <span class="badge @(_hubConnection?.State == HubConnectionState.Connected ? "bg-success" : "bg-warning") fs-6">
                @(_hubConnection?.State == HubConnectionState.Connected ? "üü¢ Live Updates" : "üîÑ Connecting...")
            </span>
        </div>
    </div>

    <div class="row">
        <!-- New Orders -->
        <div class="col-md-4">
            <div class="card border-danger h-100">
                <div class="card-header bg-danger text-white d-flex justify-content-between">
                    <span>üÜï New Orders</span>
                    <span class="badge bg-white text-danger">@_receivedOrders.Count</span>
                </div>
                <div class="card-body overflow-auto" style="max-height: 70vh;">
                    @foreach (var order in _receivedOrders)
                    {
                        <div class="card mb-2 border-danger">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between mb-2">
                                    <strong class="text-danger">@order.SeatLocation</strong>
                                    <small class="text-muted">@order.CreatedAt.ToLocalTime().ToString("HH:mm")</small>
                                </div>
                                <ul class="list-unstyled mb-2">
                                    @foreach (var item in order.Items)
                                    {
                                        <li><small>@item.Quantity x @item.Name</small></li>
                                    }
                                </ul>
                                <button class="btn btn-warning btn-sm w-100" 
                                        @onclick="() => MarkAsPreparing(order.Id)">
                                    Start Preparing
                                </button>
                            </div>
                        </div>
                    }
                    @if (!_receivedOrders.Any())
                    {
                        <p class="text-muted text-center">No new orders</p>
                    }
                </div>
            </div>
        </div>

        <!-- Preparing -->
        <div class="col-md-4">
            <div class="card border-warning h-100">
                <div class="card-header bg-warning d-flex justify-content-between">
                    <span>üî• Preparing</span>
                    <span class="badge bg-dark">@_preparingOrders.Count</span>
                </div>
                <div class="card-body overflow-auto" style="max-height: 70vh;">
                    @foreach (var order in _preparingOrders)
                    {
                        <div class="card mb-2 border-warning">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between mb-2">
                                    <strong class="text-warning">@order.SeatLocation</strong>
                                    <small class="text-muted">@order.CreatedAt.ToLocalTime().ToString("HH:mm")</small>
                                </div>
                                <ul class="list-unstyled mb-2">
                                    @foreach (var item in order.Items)
                                    {
                                        <li><small>@item.Quantity x @item.Name</small></li>
                                    }
                                </ul>
                                <button class="btn btn-success btn-sm w-100" 
                                        @onclick="() => MarkAsReady(order.Id)">
                                    Mark Ready ‚úì
                                </button>
                            </div>
                        </div>
                    }
                    @if (!_preparingOrders.Any())
                    {
                        <p class="text-muted text-center">Nothing cooking</p>
                    }
                </div>
            </div>
        </div>

        <!-- Ready for Pickup -->
        <div class="col-md-4">
            <div class="card border-success h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between">
                    <span>‚úÖ Ready for Pickup</span>
                    <span class="badge bg-white text-success">@_readyOrders.Count</span>
                </div>
                <div class="card-body overflow-auto" style="max-height: 70vh;">
                    @foreach (var order in _readyOrders)
                    {
                        <div class="card mb-2 border-success">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between mb-2">
                                    <strong class="text-success">@order.SeatLocation</strong>
                                    <small class="text-muted">@order.CreatedAt.ToLocalTime().ToString("HH:mm")</small>
                                </div>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var item in order.Items)
                                    {
                                        <li><small>@item.Quantity x @item.Name</small></li>
                                    }
                                </ul>
                                <div class="mt-2 text-center">
                                    <span class="badge bg-info">Waiting for runner...</span>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!_readyOrders.Any())
                    {
                        <p class="text-muted text-center">No orders ready</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<OrderResponse> _receivedOrders = new();
    private List<OrderResponse> _preparingOrders = new();
    private List<OrderResponse> _readyOrders = new();
    private HubConnection? _hubConnection;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
        await SetupSignalR();
    }

    private async Task SetupSignalR()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/orderhub"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<Guid, string>("NewOrderReceived", async (orderId, seatLocation) =>
        {
            await LoadOrders();
            await InvokeAsync(StateHasChanged);
        });

        _hubConnection.On<Guid, OrderStatus>("OrderStatusChanged", async (orderId, newStatus) =>
        {
            await LoadOrders();
            await InvokeAsync(StateHasChanged);
        });

        await _hubConnection.StartAsync();
        await _hubConnection.InvokeAsync("JoinKitchenGroup");
    }

    private async Task LoadOrders()
    {
        var received = await OrderService.GetOrdersByStatusAsync(OrderStatus.Received);
        var preparing = await OrderService.GetOrdersByStatusAsync(OrderStatus.Preparing);
        var ready = await OrderService.GetOrdersByStatusAsync(OrderStatus.Ready);

        if (received.IsSuccess) _receivedOrders = received.Value!.ToList();
        if (preparing.IsSuccess) _preparingOrders = preparing.Value!.ToList();
        if (ready.IsSuccess) _readyOrders = ready.Value!.ToList();
    }

    private async Task MarkAsPreparing(Guid orderId)
    {
        await OrderService.UpdateOrderStatusAsync(orderId, OrderStatus.Preparing);
        await LoadOrders();
    }

    private async Task MarkAsReady(Guid orderId)
    {
        await OrderService.UpdateOrderStatusAsync(orderId, OrderStatus.Ready);
        await LoadOrders();
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
