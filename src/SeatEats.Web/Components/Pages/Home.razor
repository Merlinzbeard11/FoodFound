@page "/"

<PageTitle>FoodFound - Never Miss a Play</PageTitle>

<div class="home-page">
    <!-- Top Bar -->
    <header class="home-topbar">
        <div class="home-topbar-inner">
            <div class="home-brand">
                <svg class="home-arches" viewBox="0 0 40 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 32V12C0 5.373 5.373 0 12 0s12 5.373 12 12h-6C18 8.686 15.314 6 12 6S6 8.686 6 12v20H0Z" fill="#FFC72C"/>
                    <path d="M16 32V12c0-6.627 5.373-12 12-12s12 5.373 12 12h-6c0-3.314-2.686-6-6-6s-6 2.686-6 6v20h-6Z" fill="#FFC72C"/>
                </svg>
                <span class="home-wordmark">FoodFound</span>
            </div>
        </div>
    </header>

    <!-- Hero -->
    <section class="home-hero">
        <h1 class="home-headline">Food to Your Seat</h1>
        <div class="home-headline-accent"></div>
        <p class="home-subheadline">Order McDonald's favorites delivered right to your seat. Never miss a play.</p>
    </section>

    <!-- Role Cards -->
    <section class="home-cards">
        <a href="/order" class="home-card">
            <div class="home-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 11h.01"/><path d="M11 15h.01"/><path d="M16 16h.01"/><path d="m2 16 20 6-6-20A20 20 0 0 0 2 16"/></svg>
            </div>
            <h3 class="home-card-title">I'm Hungry</h3>
            <p class="home-card-desc">Browse the menu & order to your seat</p>
            <span class="home-card-btn home-card-btn-red">Start Ordering &rarr;</span>
        </a>

        <a href="/kitchen" class="home-card">
            <div class="home-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.07-2.14-2-3.92-2-6.5 0 0 3.5 1 6.5 4.5 0 0-1.5 2-1.5 3.5a2.5 2.5 0 0 0 5 0c0-1.5 0-2-.5-3C18 5 22 2 22 2c0 4-2.5 8-3 10-.56 2.24 1.56 3.67 3 5-2 0-4-1-5.5-2C14.5 18 12 22 12 22s-2.5-4-4.5-7.5c-1-1.5-1.5-2.5-1.5-3.5"/></svg>
            </div>
            <h3 class="home-card-title">Kitchen Crew</h3>
            <p class="home-card-desc">Manage orders & prep status</p>
            <span class="home-card-btn home-card-btn-dark">Open Kitchen &rarr;</span>
        </a>

        <a href="/runner" class="home-card">
            <div class="home-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="5" r="2"/><path d="m9 22 3-9 3 9"/><path d="m6 13 3-3 3 3 3-3 3 3"/></svg>
            </div>
            <h3 class="home-card-title">Runner</h3>
            <p class="home-card-desc">Pick up & deliver to fans</p>
            <span class="home-card-btn home-card-btn-dark">Start Delivering &rarr;</span>
        </a>
    </section>

    <!-- How It Works -->
    <section class="home-steps-bar">
        <div class="home-steps">
            <div class="home-step"><span class="home-step-num">1</span> Find Your Seat</div>
            <div class="home-step-arrow">&rarr;</div>
            <div class="home-step"><span class="home-step-num">2</span> Pick Your Favorites</div>
            <div class="home-step-arrow">&rarr;</div>
            <div class="home-step"><span class="home-step-num">3</span> We Prepare It Fresh</div>
            <div class="home-step-arrow">&rarr;</div>
            <div class="home-step"><span class="home-step-num">4</span> Delivered to You</div>
            <div class="home-step-arrow">&rarr;</div>
            <div class="home-step"><span class="home-step-num home-step-num-green">5</span> Enjoy the Game</div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="home-footer">
        <span>FoodFound &mdash; Delta Center</span>
        <svg class="home-footer-arches" viewBox="0 0 40 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 32V12C0 5.373 5.373 0 12 0s12 5.373 12 12h-6C18 8.686 15.314 6 12 6S6 8.686 6 12v20H0Z" fill="#6B6B6B"/>
            <path d="M16 32V12c0-6.627 5.373-12 12-12s12 5.373 12 12h-6c0-3.314-2.686-6-6-6s-6 2.686-6 6v20h-6Z" fill="#6B6B6B"/>
        </svg>
    </footer>
</div>
